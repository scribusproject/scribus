			]
		},
		{
			"name": "openscenegraph",
			"buildsystem": "cmake",
			"sources":[
				{
					"type":"archive",
					"url": "http://trac.openscenegraph.org/downloads/developer_releases/OpenSceneGraph-3.4.0.zip",
					"sha256": "5c727d84755da276adf8c4a4a3a8ba9c9570fc4b4969f06f1d2e9f89b1e3040e"
