			]
		},
		{
			"name": "graphicsmagick",
			"buildsystem": "autotools",
			"sources":[
				{
					"type":"archive",
					"url": "https://sourceforge.net/projects/graphicsmagick/files/graphicsmagick/1.3.25/GraphicsMagick-1.3.25.tar.xz",
					"sha256": "d64bfa52d2e0730eff9ce3ed51d4fc78dbb68e2adaa317b2bb3c56e6ee61ac9f"
				}
			]
		},
		{
			"name": "qpdf",
